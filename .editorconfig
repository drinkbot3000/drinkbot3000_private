# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, JSX, TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
charset = utf-8

# JSON files
[*.json]
indent_style = space
indent_size = 2
charset = utf-8

# HTML files
[*.html]
indent_style = space
indent_size = 4
charset = utf-8

# CSS files
[*.css]
indent_style = space
indent_size = 2
charset = utf-8

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
charset = utf-8

# Package.json
[package.json]
indent_style = space
indent_size = 2
charset = utf-8
